doctype html
head
  title AO Registration
  // Required meta tags
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  // Bootstrap CSS v5.2.1
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT' crossorigin='anonymous')
  link(rel='stylesheet' href='/css/Form.css')
header
  // place navbar here
main
  .container(style='transform:translateY(50px);')
    h2  AO Registration
    hr
    .row.justify-content-center.align-items-center.my-5.cage
      .col-lg-2.cage
        form(action='/ufr' name='register'  method="POST")
          .row.justify-content-center.align-items-center.g-2.lamar
            .col-lg-3.form-zones
              label First Name:
              input.form-inputs(name='fName' type='text')

            .col-lg-3.form-zones
              label Last Name:
              input.form-inputs(name='lName' type='text')

            .col-lg-3.form-zones
              label Date of Registration:
              input.form-inputs(name='dor' type='date')

            
            .col-lg-3.form-zones
              label Unique Number:
              input.form-inputs(name='uniqueNo' type='text')

            .col-lg-3.form-zones
              label Phone Number:
              input.form-inputs(name='tel' type='text')   

            .col-lg-3.form-zones
              label Division:
              select#select.form-select(name='division')
                option(value='' style='text-align:center;') Select option
                option(value='Makindye') Makindye
                option(value='Rubaga') Rubaga
                option(value='Nakawa') Nakawa
                option(value='Kawempe') Kawempe

            .col-lg-3.form-zones 
              label Date of Birth: 
              input.form-inputs(name='dob' type='date')

            .col-lg-3.form-zones 
              label NIN Number: 
              input.form-inputs(name='ninNo' type='text')

            .col-lg-3.form-zones
              label Role: 
              //- input.form-inputs(name='role')
              select.input(name='role')
                option(value='0')
                option(value='AgricOfficer') AgricOfficer
            
            .col-lg-3.form-zones
              label Gender:
              .radio
                input#gender1(type='radio' name='gender' autocomplete='off' value='male' checked='')
                span Male
                input#gender2(type='radio' name='gender' autocomplete='off' value='female')
                span Female

            .col-lg-3.form-z0nes 
              label Password: 
              input.form-inputs(name='password' type='password')
              
            .col-lg-6
              button.btn.btn-primary(type='submit') Register
footer
  // place footer here
