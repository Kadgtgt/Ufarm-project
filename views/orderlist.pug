extends layout
block content
    style.
        .list{
        text-align:center;
        }
        .card-title{
        color:black;
        padding:8px;
        font-weight:bolder;
        font-size:28px;
        }
        .table{
        width:85%; 
        margin:auto;
        border:2px solid black; 
        padding:8px;
        }
        thead{
        font-weight:700;
        font-size:18px;  
        }
        tbody{
            font-weight:500;
            font-size:15px;
        }
        .form-group{
            transform:translateY(55px);
            margin-left:12px;
            padding:25px;
            position:absolute;
            left:0;

        }
        .btn{
            padding-top:8px;
            padding-bottom:8px;
            font-weight:bolder;
            font-weight:700;
            color: taupe;
        }
        .btnz{
            border: 3px solid red;
            border-radius: 5px;
            margin-left: 150px;
            font-weight:bolder;
            font-weight:700;
            color:black; 
        }
        .delete{
            font-size:18px;
            font-weight:700;
            color: rgb(11, 11, 11,0.87);
        }
        .availability{	
            color:rgb(25, 90, 90);
            font-size:18px;
            font-weight:700;
        }
        
    header.card-header.list
        h4.card-title Ordered Products List 
    table.table.table-bordered 
        thead
            tr
                th Produce Name
                th Quantity
                th Delivery Mode 
                th Price
                th Status
                th Customer Email
                th Customer Phone Number
                th Customer Directions
                th Availability
                th Mode of Payment
                th Image 
                th Change Availability 
                th Delete
        tbody
            if orders.length
                each order in orders
                    if order.availability == 'booked'
                        tr
                            td #{order.prodName}
                            td #{order.prodQuantity}
                            td #{order.deliveryMode}
                            td #{order.price}
                            td #{order.status}
                            td #{order.customeremail}
                            td #{order.customertel}
                            td #{order.customerdirection}
                            td #{order.availability}
                            td #{order.paymentMode}
                            td 
                                img(src="/"+order.prodImage, alt="Image" width='150px' height="150px")
                            //- td #{moment(us
                            td                            
                                a.btn.btn-primary.btn-block.availability(href='/produce/available/'+order._id) Availability


                            td
                                form(method="post" action='/produce/delete')
                                    input(type="hidden" placeholder="" name="id", value=order._id)
                                    button.btn.btn-danger.btn-block.delete(type="submit") Delete
    div.form-row
        div.col.form-group
            a.btnz.btn-secondary(class="button" href="/producepage") Back

