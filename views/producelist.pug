extends layout
block content
    header.card-header
        h4.card-title List of Products
    br
    nav
    #nav-tab.nav.nav-tabs(role='tablist')
        a#nav-profile-tab.nav-item.nav-link(href='') Registered Products
    #nav-tabContent.tab-content
    br
    table.table.table-bordered 
        thead
            tr
                th Name
                th Category 
                th type
                th Status
                th Price 
                th Quantity 
                th Mode of Delivery 
                th Mode of Payment 
                th Availability
                th Image
                th Update
                th Change Status
                th Delete
        tbody
            if products.length
                each product in products
                    if  product.status == "pending"
                        tr
                            td #{product.prodName}
                            td #{product.prodCategory}
                            td #{product.prodType}
                            td #{product.status}
                            td #{product.price}
                            td #{product.prodQuantity}
                            td #{product.deliveryMode}
                            td #{product.paymentMode}
                            td #{product.availability}
                            td 
                                img(src="/"+product.prodImage, alt="Image" width='150px' height="150px")
                            //- td #{moment(us
                            td
                                a.btn.btn-primary.btn-block(href='/produce/update/'+product._id) Update
                            td
                               a.btn.btn-secondary.btn-block(href='/produce/approve/'+product._id) Approve
                            td
                                form(method="post" action='/produce/delete')
                                    input(type="hidden" placeholder="" name="id", value=product._id)
                                    button.btn.btn-danger.btn-block(type="submit") Delete
    div.form-row
        div.col.form-group
            a(class='button' href='/foDashboard') Back

block footer
