doctype html
head
  title Title
  // Required meta tags
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  // Bootstrap CSS v5.2.1
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT' crossorigin='anonymous')
  link(rel='icon' href='/Images/fav.jpg')
  link(rel='stylesheet' href='/css/forms.css')
header
  // place navbar here
main
  .container
    h1 Farmer One SignUp
    .row.justify-content-center.align-items-center.g-2
      .col-lg-6.bg-dark.text-white.my-5
        form(action='/foreg' method='post' name='registration')
          .row.justify-content-center.align-items-center.g-2
            .col-lg-6
              label(for='fName') First Name
              input#fName.input(type='text' name='fName' autofocus='')
            .col-lg-6
              label(for='lName') Last Name
              input#lName.input(type='text' name='lName' autofocus='')
            .col-lg-6
              label(for='uniqueNO') Unique ID
              input#uniqueNo(type="text").input(type='text' name='uniqueNo' autofocus='')
            .col-lg-6
              label(for='tel') Phone Number
              input#tel.input(type='text' name='tel' autofocus='')
            .col-lg-6
              label(for='email') Email Address
              input#email.input(type='text' name='email' autofocus='')
            .col-lg-6
              label(for='roles') Roles
              select#select.input(name='dropdown')
                option(value='0')
                option(value='1') Farmer One
            .col-lg-6
              label(for='ward') Ward
              select#select.input(name='dropdown')
                option(value='0')
                option(value='1') Masajja01
                option(value='2') Masajja02
                option(value='2') Masajja03
                option(value='2') Masajja04
            .col-lg-6
              label(for='date_regex') Date of Registration:
              input#regex_date.input(type='date' name='date_regex')
            .col-lg-6
              label(for='password') Password
              input#password.input(type='password' name='password')
            .col-lg-6
              label(for='gender') Gender:
              .radio
                input#gender1(type='radio' name='gender' autocomplete='off' value='male' checked='')
                span Male
                input#gender2(type='radio' name='gender' autocomplete='off' value='female')
                span Female
          br
          .col-lg-6
            a.btn(href='' style='border: 2px solid black' type='submit' value='submit') Sign up
footer
  // place footer here
