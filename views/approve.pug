doctype html
head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet' href='bootstrap-css/css/bootstrap.css')
    link(rel='stylesheet' href='css/style.css')
    title Registration
.container-fluid.form-style
    form#signup.form(action='/produce/approve?id='+product._id name='registration' method='POST')
        h3 Update Produce 
        hr
        .row
            .col
                .form-field
                    label(for='status') Status:
                    select(name='status')
                        option(value="pending" selected = product.status === "pending") pending
                        option(value="approved" selected = product.status === 'approved') approved
                        //- option(value="pending" ) pending
                        //- option(value="approved") approved
                .form-field
                    input.btn.register-btn(type='submit' value='Register')
script(src='bootstrap-js/js/bootstrap.bundle.js')
