doctype html
head
  title Sign up
  // Required meta tags
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  // Bootstrap CSS v5.2.0-beta1
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css' integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx' crossorigin='anonymous')
  link(rel='icon' href='/Images/fav.jpg')
  link(rel='stylesheet' href='/css/register.css')
header
  // place navbar here
main
  .container
    form#signup.form(action='/signup' name='registration' method='post' onsubmit='return register()')
      h1 Sign Up
      .form-field
        label(for='first name') First Name:
        input#username(type='text' name='fName' autocomplete='off')
        small
      .form-field
        label(for='last name') Last Name:
        input#username(type='text' name='lName' autocomplete='off')
        small 
      .form-field
        label(for='telephone') Phone Number:
        input#telephone(type='text' name='tel' placeholder='0782323279' autocomplete='off')
        small
      .form-field
        label(for='email') Email:
        input#email(type='text' name='email' autocomplete='off')
        small
      .form-field
        label(for='password') Password:
        input#password(type='text' name='password' autocomplete='off')
        small
    .new.account
      a.btn(href='/login2' style='color: teal') Sign up
footer#sticky-footer.flex-shrink-0.py-4.bg-dark.text-white-50
  .container.text-center
